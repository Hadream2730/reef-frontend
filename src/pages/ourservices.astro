---
// export const prerender = true;
import fetchApi from "../lib/strapi";

// Import Custom Components
import Layout from "../layouts/Layout.astro";

const urlParamsObject = {
  populate: {
    media: {
      populate: "*",
    },
    category: {
      populate: "*",
    },
  },
};

const pageUrlParamsObject = {
  populate: {
    heading: {
      populate: "*",
    },
  },
};

const locale = Astro.cookies.get("locale")?.value;
const servicesData: any = await fetchApi<any[]>({
  endpoint: "services", // the content type to fetch
  query: urlParamsObject, // the key to unwrap the response
  locale: locale,
});

const servicePageData: any = await fetchApi<any[]>({
  endpoint: "service-page", // the content type to fetch
  query: pageUrlParamsObject, // the key to unwrap the response
  locale: locale,
});

